[Unit]
Description=BIRD Internet Routing Daemon
Wants=network.target
After=wgmesh.service wgnamespace.service

[Service]
Type=simple
ExecStart=/usr/sbin/ip netns exec %i /usr/sbin/bird -f -u bird -g bird -s /var/run/bird-%s.sock -c /etc/bird/bird_%i.conf
ExecReload=/bin/kill -HUP $MAINPID
Restart=on-failure

[Install]
WantedBy=multi-user.target
